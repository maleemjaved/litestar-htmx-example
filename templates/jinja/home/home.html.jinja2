        <div id="card4" hx-get="{{ url_for('card', flag_id=4) }}" hx-trigger="load, every 2s" hx-target="this" hx-swap="innerHTML" class="flex flex-col w-[500px] h-[250px] border-2 justify-center items-center mx-6 my-4 bg-blue-50 rounded-sm border-slate-300"></div>
